<div class="sm-container">
  <h1>Add A Restaurant to DBC Eat and Review!</h1>

  <% if @errors %>
    <% @errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
  <div>
    <form action="/restaurants" method="POST" id="new-restaurant">
      <label for="name">Name:</label>
      <input type="text" name="restaurant[name]" id="name">
      <label for="cuisine">Cuisine:</label>
      <input type="text" name="restaurant[cuisine]" id="cuisine">
      <label for="address">Address:</label>
      <input type="text" name="restaurant[address]" id="address">
      <label for="city">City:</label>
      <input type="text" name="restaurant[city]" id="city">
      <label for="state" class="select-label">State:</label>
      <select id="state" name="restaurant[state]" type="text">
        <option value= ""></option>
        <% @states.each do |state| %>
        <option value="<%= state %>"><%= state %></option>
        <% end %>
      </select>
      <label for="zipcode">Zipcode:</label>
      <input type="text" name="restaurant[zipcode]" id="zipcode">
      <input type="submit" value="Create Restaurant">
    </form>
  </div>
</div>
