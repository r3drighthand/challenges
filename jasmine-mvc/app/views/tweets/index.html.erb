<div class="row">
  <div class="col-xs-3 col-xs-offset-1">
    <%= image_tag 'tweety.gif', class: "img-responsive" %>


    <form>
      <h3>New Tweet</h3>
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" id="username">
      </div>

      <div class="form-group">
        <label for="tweet-content">Say Something</label>
        <textarea class="form-control" id="tweet-content" rows="4" placeholder="What's on your mind?"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  </div>

  <div class="col-xs-4">
    <h2>Your Timeline</h2>

    <% @tweets.each do |tweet| %>
      <div class="media">
        <div class="media-left">
          <a href="#"><img class="media-object" src="<%=tweet.avatar_url%>"></a>
        </div>
        <div class="media-body">
          <%= link_to "#{tweet.username}", "http://tweety.com/#{tweet.username}" %> <%= tweet.content %>
        </div>
      </div>
    <% end %>
  </div>
</div>
